<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="250dp"
    android:layout_height="290dp"
    android:background="@drawable/version_update_day" >

    <TextView
        android:id="@+id/tv_version_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="55dp"
        android:gravity="center"
        android:text="V1.0.0"
        android:textColor="#ffffff"
        android:textSize="14sp" />

    <ScrollView
        android:id="@+id/sv_container"
        android:layout_width="200dp"
        android:layout_height="125dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:overScrollMode="never"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tv_version_content"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:lineSpacingExtra="15dp"
                android:textColor="#464646"
                android:textSize="14sp" />
        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/bt_version_update_sure"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:layout_below="@id/sv_container"
        android:layout_marginStart="25dp"
        android:background="@drawable/dialog_delete_sure"
        android:text="立即更新"
        android:textColor="#ffffff"
        android:textSize="15sp" />

    <Button
        android:id="@+id/bt_version_update_cancel"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:layout_below="@id/sv_container"
        android:layout_marginStart="20dp"
        android:layout_toEndOf="@id/bt_version_update_sure"
        android:background="@drawable/dialog_delete_cancel"
        android:text="稍后再说"
        android:textColor="#7196ef"
        android:textSize="15sp" />

</RelativeLayout>